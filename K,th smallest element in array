def kthSmallest(arr, N, K):         #arr=Array    N=len(array)    K=Kth element in array
    arr.sort()
    return arr[K-1]
if __name__ == '__main__':
    arr = [12, 3, 5, 7, 19]
    N = len(arr)
    K = 2
 
    # Function call
    print("K'th smallest element is",
          kthSmallest(arr, N, K))
