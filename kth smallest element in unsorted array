#include<iostream>
#include<bits/stdc++.h>
using namespace std;

int kthSmallest(int arr[],int n,int k){
    sort(arr,arr+n);
    return arr[k-1];
}

int main(){

    int arr[] = { 12, 3, 5, 7, 19 };
    int n = sizeof(arr) / sizeof(arr[0]);
    int k;
    cout<<"Enter value for k : ";
    cin>>k;
    
    int ans = kthSmallest(arr,n,k);
    cout<<"K'th smallest element is : "<<ans<<endl;
    return 0;
}
